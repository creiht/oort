#! /bin/sh

### BEGIN INIT INFO
# Provides:          ortd
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: ort
### END INIT INFO

DAEMON_OPTS="-s map"

pid() {
  if [ -f /usr/local/bin/ortd ]; then
    pidof /usr/local/bin/ortd
  fi
}

stop() {
  if pidof /usr/local/bin/ortd >/dev/null; then
    kill "$(pid)"
  else
    echo "ortd not running"
    exit 1
  fi
}

start() {
  if pidof /usr/local/bin/ortd >/dev/null; then
    echo "ortd already running"
    exit 1
  else
    nohup ortd $DAEMON_OPTS > /var/log/ortd.log  2>&1 &
  fi
}

restart() {
  if pidof /usr/local/bin/ortd >/dev/null; then
    kill  "$(pid)"
    nohup ortd $DAEMON_OPTS > /var/log/ortd.log  2>&1 &
    exit 0
  else
    nohup ortd $DAEMON_OPTS > /var/log/ortd.log  2>&1 &
    exit 0
  fi
}

status() {
  if pidof /usr/local/bin/ortd >/dev/null; then
    echo "ortd with pid $(pid) is running"
  else
    echo "ortd is not running"
  fi
  exit 0
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        restart
        ;;
  status)
        status
        ;;
  *)
        echo "Usage: service ortd {start|stop|restart|status}"
        exit 1
        ;;
esac
